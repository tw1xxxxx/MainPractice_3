<Window x:Class="_3_Entity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3_Entity"
        mc:Ignorable="d"
        Title="че, entity?" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dateGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ProductName}" Header="Название продукта" FontSize="13" FontWeight="DemiBold" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Price}" Header="Цена" FontSize="13" FontWeight="DemiBold" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding CategoryName}" Header="Имя категории" FontSize="13" FontWeight="DemiBold" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

